{
  "manifest_version": 2,
  "version": "1.0.0",
  "name": "Sebu",
  "description": "Save and learn sentences",
  
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "css": [
        "libs/bootstrap.min.css"
      ],
      "js": [
        "libs/jquery.min.js",
        "libs/react.min.js",
        "libs/react-dom.min.js",
        "libs/redux.min.js",
        "index.js"
      ]
    }
  ],

  "background": {
    "page": "background.html",
    "persistent": true
  },

  "permissions": [
    "storage",
    "tabs"
  ]
}
